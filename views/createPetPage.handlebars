<div class="row allInputs">
    <div class="col-md-6 inputMarg addPetCard card p-3">
        <h2>Describe Pet</h2>

        <form class="form pet-create-form">
            <div class="form-group">
                <input class="form-input" type="text" id="pet-name-field" placeholder="Pet name"/>
                {{name}}
                </input>
            </div>
            <div class="form-group">
                <input class="form-input" type="text" id="pet-age-field" placeholder="Age"/>
                {{age}}
                </input>
            </div>
            <div class="form-group">
                <input class="form-input" type="text" id="pet-gender-field" placeholder="Gender"/>
                {{gender}}
                </input>
            </div>
            <div class="form-group">
                <input class="form-input" type="text" id="pet-weight-field" placeholder="Weight"/>
                {{weight}}
                </input>
            </div>
            <div class="form-group">
                <input class="form-input" type="text" id="pet-description-field" placeholder="Description"/>
                {{description}}
                </input>
            </div>
            <div class="form-group">
                <input class="form-input" type="text" id="pet-type-field" placeholder="Pet Type"/>
                {{pet_type}}
                </input>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Add Pet</button>
            </div>
        </form>
        <form action="../api/images/single" method="POST" enctype="multipart/form-data" class="img-form addImageMarg">
            <input id="petpictureinput" type="file" name="image"/>
            <button type="submit">Submit Image</button>
        </form>
        
    </div>
</div>

<script src="./js/petcreate.js"></script>